rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload/read program images
    match /programs/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow reading passes folder for public access
    match /passes/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow business logos and assets
    match /businesses/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow reading pkpass files (stored at root level)
    match /{fileName} {
      allow read: if fileName.matches('.*\\.pkpass');
      allow write: if request.auth != null;
    }
  }
}
